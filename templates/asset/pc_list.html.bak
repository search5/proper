{% extends "base.html" %}

{% block content%}
<div class="row">
    <div class="row">
        <div class="span2">
            <a href="/pc/add/form" role="button" class="btn">PC 추가</a>
        </div>
    </div>
    <div class="row">&nbsp;</div>
    <table class="table table-bordered table-striped data-list">
        <thead>
            <tr>
                <th>번호</th>
                <th>자산코드</th>
                <th>모델명</th>
                <th>제조년월</th>
                <th>취득년월</th>
                <th>프로세서</th>
                <th>메모리</th>
                <th>비고</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <td colspan="8"">
                {% if total_page == 1 %}
                <select style="width: 100px;">
                    <option>{{total_page}}</option>
                </select>
                {% elif total_page > 1 %}
                <a href="/pc?page={{prev_page_number}}" class="btn btn-small"><i class="icon-chevron-left"></i></a>
                <select style="width: 100px;" class="form-control paging">
                    {% for page_num in range(1, total_page + 1) %}
                        <option {% if page_num == currPage %}selected{% endif %}>{{page_num}}</option>
                    {% endfor %}
                </select>
                <a href="/pc?page={{next_page_number}}" class="btn btn-small"><i class="icon-chevron-right"></i></a>
                {% endif %}
                </td>
            </tr>
        </tfoot>
        <tbody>
            {% for row in lst_pc %}
            <tr>
                <td>{{row.no}}</td>
                <td><a href="/pc/{{row.code}}">{{row.code}}</a></td>
                <td>{{row.model_nm or ''}}</td>
                <td>{{row.make_date or ''}}</td>
                <td>{{row.acquire_date or ''}}</td>
                <td>{{row.processor or ''}}</td>
                <td>{{row.memory or ''}}</td>
                <td>{{row.note or ''}}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}



